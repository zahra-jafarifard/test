{
  "name": "exhub",
  "version": "2.2.2024",
  "homepage": "./",
  "private": true,
  "author": "Zahra Jafarifad(TELMIS)",
  "description": "Exhub using Javascript :)",
  "main": "public/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zahra-jafarifard/test.git"
  },
  "build": {
    "appId": "com.electron.myapp",
    "publish": [
      {
        "provider": "generic",
        "url": "https://github.com/zahra-jafarifard/test.git"
      }
    ],
    "productName": "Exhub",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "nsis": {
      "createDesktopShortcut": "always"
    }
  },
  "dependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "babel-loader": "^9.1.2",
    "body-parser": "^1.20.1",
    "css-loader": "^6.7.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.2",
    "react-scripts": "5.0.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "update-electron-app": "^2.0.1",
    "web-vitals": "^2.1.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",

    "deploy": "npm run build && electron-builder -w -c.extraMetadata.main=build/main.js --publish always",

    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:package:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/main.js",
    "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/main.js",
    "electron:package:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/main.js",
    "postinstall": "",
    "install": "node-gyp install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^22.0.2",
    "electron-builder": "^23.6.0",
    "tailwindcss": "^3.2.4"
  }
}
